{
  "name": "Joy & Niko Website (uv + FastAPI)",

  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  // Inside the container, our repo will live here:
  "workspaceFolder": "/workspaces/app",

  // Explicitly mount the local repo into /workspaces/app so the folder name on disk doesn't matter
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/app,type=bind,consistency=cached",

  "remoteUser": "vscode",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",
        "python.venvPath": "${containerWorkspaceFolder}/.venv",
        "python.analysis.typeCheckingMode": "basic"
      }
    }
  },

  "containerEnv": {
    "UV_CACHE_DIR": "/home/vscode/.cache/uv"
  },

  "postCreateCommand": "uv python install 3.12 && if [ -f pyproject.toml ]; then uv sync; fi",

  "forwardPorts": [8000, 8080],

  "portsAttributes": {
    "8000": {
      "label": "App",
      "onAutoForward": "openBrowser"
    }
  }
}